@model IEnumerable<Hospital.Models.Especialidad>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4>Especialidad</h4>
<br>
<p>
     <a class="waves-effect waves-light btn green" asp-action="Create">Crear<i class="material-icons left">add_circle</i></a>
</p>

<table class="striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         @foreach (var item in Model) {
           
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEspecialidad" class="waves-effect waves-light btn-small amber lighten-1">Editar<i class="material-icons right">edit</i></a> 
                <a asp-action="Details" asp-route-id="@item.IdEspecialidad" class="waves-effect waves-light btn-small green">Mostrar<i class="material-icons right">visibility</i></a>
                <a asp-action="Delete" asp-route-id="@item.IdEspecialidad" class="waves-effect waves-light btn-small red lighten-1">Eliminar<i class="material-icons right">delete</i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

</body>
</html>
