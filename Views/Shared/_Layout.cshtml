<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title id="hospital">@ViewData["Title"] - Hospital</title>
   
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
   
    <link type="text/css" rel="stylesheet" href="~/css/materialize.min.css"  media="screen,projection"/>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css"/>
     
</head>
<body>
    <header>
        <nav>
            <div class="nav-wrapper blue darken-4">
            <a href="#!" class="brand-logo" id="hospital">Clinica La Merced</a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul class="right hide-on-med-and-down">
                <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li><a asp-controller="Especialidad" asp-action="Index">Especialidad</a></li>
                <li><a asp-controller="Medico" asp-action="Index">Medico</a></li>
                <li><a asp-controller="Paciente" asp-action="Index">Paciente</a></li>
                <li><a asp-controller="Medicamento" asp-action="Index">Medicamento</a></li>
                <li><a asp-controller="Atencion" asp-action="Index">Atencion</a></li>
                <li><a href="#" onclick="window.open('./Faces.pdf', '_blank', 'fullscreen=yes'); return false;">Documentacion</a></li>
                
            </ul>
            </div>
        </nav>

        <ul class="sidenav" id="mobile-demo">
                <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li><a asp-controller="Especialidad" asp-action="Index">Especialidad</a></li>
                <li><a asp-controller="Medico" asp-action="Index">Medico</a></li>
                <li><a asp-controller="Paciente" asp-action="Index">Paciente</a></li>
                <li><a asp-controller="Medicamento" asp-action="Index">Medicamento</a></li>
                <li><a asp-controller="Atencion" asp-action="Index">Atencion</a></li>
                <li><a href="#" onclick="window.open('./Faces.pdf', '_blank', 'fullscreen=yes'); return false;">Documentacion</a></li>
        </ul>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Hospital - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
     <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="~/js/materialize.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("Scripts", required: false)

    <script>
        $(document).ready(function(){
            $('.sidenav').sidenav();
            M.updateTextFields();
            $('select').formSelect();
        });
    </script>
</body>
</html>
